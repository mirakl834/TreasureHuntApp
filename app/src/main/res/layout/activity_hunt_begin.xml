<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HuntBeginActivity">

    <TextView android:id="@+id/tvHuntTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Target Name"
        android:textSize="25dp"
        android:padding="15dp"/>

    <TextView android:id="@+id/tvHuntDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHuntTitle"
        android:text="Target Description"
        android:padding="15dp"
        android:textSize="20dp"/>

    <TextView android:id="@+id/tvHuntDistanceLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHuntDescription"
        android:text="Distance Left: Calculating..."
        android:padding="15dp"
        android:textSize="20dp"/>

    <LinearLayout android:id="@+id/llBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHuntDistanceLeft">

        <Button android:id="@+id/btnBeginHunt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Begin check location!"/>

    </LinearLayout>



</RelativeLayout>